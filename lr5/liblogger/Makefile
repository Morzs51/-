# Определение компилятора
CC=gcc

CFLAGS= -Wall -Wextra

# Определение имени динамической библиотеки
LIB_NAME=liblogger.so

# Правило по умолчанию для создания динамической библиотеки
all: $(LIB_NAME)

# Правило для сборки динамической библиотеки
$(LIB_NAME): logger.o
	$(CC) $(CFLAGS) -shared -o $@ $^

# Правило для сборки объектного файла из исходного кода логгера
logger.o: logger.c logger.h
	$(CC) $(CFLAGS) -c $<

# Правило для очистки проекта от объектных файлов и библиотеки
clean:
	rm -f *.o $(LIB_NAME)